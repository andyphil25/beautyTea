= form_for(@wanted) do |f|
  - if @wanted.errors.any?
    #error_explanation
      %h2
        = pluralize(@wanted.errors.count, "error")
        prohibited this wanted from being saved:
      %ul
        - @wanted.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :msg
    %br/
    = f.text_area :msg
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .actions
    = f.submit
